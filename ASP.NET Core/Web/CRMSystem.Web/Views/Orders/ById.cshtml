                            <div class="text-muted small">
                                Product: @Model.Product.Name
                            </div>
                            <div class="text-muted small">
                                Quanityt: @Model.Quantity
                            </div>
                            <div class="text-muted small">
                                Price: @Model.Price BGN
                            </div>

                        </div>
