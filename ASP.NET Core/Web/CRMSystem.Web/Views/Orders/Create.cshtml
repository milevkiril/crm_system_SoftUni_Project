@using (Html.BeginForm("Create", "Orders"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
}
@model CRMSystem.Web.ViewModels.Orders.CreateOrderViewModel
@{
    this.ViewData["Title"] = "Create new order";
    var products = Model.Products.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<h1>@this.ViewData["Title"]</h1>


<form method="post" asp-action="Create">

    <input type="hidden" asp-for="DealId">
    

    <div class="form-group">
        <label asp-for="ProductId" class="control-label"></label>
        <select asp-for="ProductId" class="form-control" asp-items="products"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>