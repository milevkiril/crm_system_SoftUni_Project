@using (Html.BeginForm("Create", "Deals"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
}
@model CRMSystem.Web.ViewModels.Deals.DealCreateViewModel
@{
    this.ViewData["Title"] = "Create new deal";
}

<h1>@this.ViewData["Title"]</h1>


<form method="post" asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div>
        <label asp-for="Stage"></label>
        <select asp-for="Stage" asp-items="@new SelectList(Enum.GetNames(typeof(CRMSystem.Data.Models.Enumerators.Stage)))" class="form-control"></select>
        <span asp-validation-for="Stage" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>
