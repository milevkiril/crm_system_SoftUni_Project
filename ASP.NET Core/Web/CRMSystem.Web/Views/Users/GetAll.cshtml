@using CRMSystem.Common
@model CRMSystem.Web.ViewModels.Users.AllUsersViewModel
@{
    this.ViewData["Title"] = $"All users!";
}

<div class="text-center">
    <h1 class="display-3">@this.ViewData["Title"]</h1>
    @*<cache expires-after="TimeSpan.FromDays(10)" vary-by-query="id">
        <h1 class="display-3">@DateTime.UtcNow</h1>
    </cache>*@
</div>
<hr />
<div class="row">
    @foreach (var user in Model.Users)
    {
        <div class="col-md-4 media">
            @*<img src="@category.ImageUrl" width="100" class="mr-3" alt="@category.Title">*@
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@user.UserName">
                        @user.FirstName (@user.UserName)
                    </a>
                </h5>
                @user.City
                <div></div>
                @user.Country
            </div>
        </div>
        <div></div>
    }
</div>